<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net7.0-windows</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Critical-Impact</Authors>
        <PackageProjectUrl>https://github.com/Critical-Impact/LuminaSupplemental</PackageProjectUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <RepositoryUrl>https://github.com/Critical-Impact/LuminaSupplemental</RepositoryUrl>
        <PackageVersion>6.0.2</PackageVersion>
        <FileVersion>6.0.2</FileVersion>
        <Description>Supplemental data for lumina and dalamud plugins.</Description>
    </PropertyGroup>
    
    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>1591</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../../LICENSE" Pack="true" PackagePath="" />
    </ItemGroup>

    <PropertyGroup>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <PropertyGroup>
        <DalamudLibPath>$(AppData)\XIVLauncher\addon\Hooks\dev\</DalamudLibPath>
    </PropertyGroup>


    <ItemGroup>
        <Reference Include="Lumina">
            <HintPath>$(DalamudLibPath)Lumina.dll</HintPath>
            <Private>False</Private>
        </Reference>
        <Reference Include="Lumina.Excel">
            <HintPath>$(DalamudLibPath)Lumina.Excel.dll</HintPath>
            <Private>False</Private>
        </Reference>
    </ItemGroup>


    <ItemGroup>
      <PackageReference Include="CSVFile" Version="3.1.0" />
      <PackageReference Include="CsvHelper" Version="30.0.1" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Generated\DungeonBossChest.csv" />
      <None Remove="Generated\DungeonBoss.csv" />
      <Content Include="Generated\DungeonBoss.csv" />
      <Content Include="Generated\DungeonBossChest.csv" />
      <None Remove="Generated\AirshipDrop.csv" />
      <Content Include="Generated\AirshipDrop.csv" />
      <None Remove="Generated\DungeonChest.csv" />
      <Content Include="Generated\DungeonChest.csv" />
      <None Remove="Generated\DungeonChestItem.csv" />
      <Content Include="Generated\DungeonChestItem.csv" />
      <None Remove="Generated\DungeonDrop.csv" />
      <Content Include="Generated\DungeonDrop.csv" />
      <None Remove="Generated\ItemSupplement.csv" />
      <Content Include="Generated\ItemSupplement.csv" />
      <None Remove="Generated\MobDrop.csv" />
      <Content Include="Generated\MobDrop.csv" />
      <None Remove="Generated\SubmarineDrop.csv" />
      <Content Include="Generated\SubmarineDrop.csv" />
    </ItemGroup>


</Project>
